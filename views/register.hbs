                    <div class="cultural"></br>
                        <label>Cultural Events</label>
                        <input type="radio" id="Canvas Painting (Cultral event)" name="fest" value="Canvas Painting (Cultral event)">
                        <label for="Canvas Painting (Cultral event)">Canvas Painting </label></div></br>

                    <div class="Sports">
                        <label> Sports Events</label>
                        <input type="radio" id="Box Cricket (Sports event)" name="fest1" value="Box Cricket (Sports event)">
                        <label for="Box Cricket (Sports event)">Box Cricket</label>
                    </div></br>

                    <div class="Technical">
                        <label>Technical Events</label>
                        <input type="radio" id="Mock Test (Technical event)" name="fest2" value="Mock Test (Technical event)">
                        <label for="Mock Test (Technical event)">Mock Test</label><br>
                    </div></br>

                    <input type="submit" className='btn btn-danger btn-block' value='Register'/>


