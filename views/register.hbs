<body>
    <section>
        <form action="/register" method="POST" style="margin: auto; width: 60%; padding: 10px;">
            <div>
                <div className='container'></br>
                    <h1 style="margin: auto; width: 50%; padding: 20px;">Welcome to registration page </h1></br>
                    <label>Name</label>
                    <input type="text" placeholder="Name" name="name"></input><br>

                    <label>Conatct Number</label>
                    <input type="text" placeholder="Contact number" name="contact"></input><br>

                    <label>Email Id</label>
                    <input type="text" placeholder="Email id" name="email"></input><br>

                    <label>Gender</label>
                    <input type="radio" id="male" name="gender" value="male">
                    <label for="male">Male</label>
                    <input type="radio" id="female" name="gender" value="female">
                    <label for="female">Female</label><br>

                    <div class="dept">
                        <label>Department</label>
                        <input type="radio" id="Computer Science" name="dept" value="Computer Science">
                        <label for="Computer Science">Computer Science</label>
                        <input type="radio" id="Civil" name="dept" value="Civil">
                        <label for="Civil">Civil</label>
                        <input type="radio" id="Mechanical" name="dept" value="Mechanical">
                        <label for="Mechanical">Mechanical</label>
                        <input type="radio" id="Electrical" name="dept" value="Electrical">
                        <label for="Electrical">Electrical</label>
                        <input type="radio" id="Electronics" name="dept" value="Electronics">
                        <label for="Electronics">Electronics</label><br>
                    </div>

                    <div class="year">
                        <label>Year</label>
                        <input type="radio" id="SY" name="year" value="SY">
                        <label for="SY">SY</label>
                        <input type="radio" id="TY" name="year" value="TY">
                        <label for="TY">TY</label>
                        <input type="radio" id="BE" name="year" value="BE">
                        <label for="BE">BE</label><br>
                    </div>


